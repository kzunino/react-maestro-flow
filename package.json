{
	"name": "react-maestro-flow",
	"author": "Kyle <kzunino@gmail.com>",
	"version": "0.5.3",
	"description": "Stateful, branching workflow orchestration for React.",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"files": ["dist"],
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"lint": "biome check .",
		"lint:fix": "biome check . --write",
		"format": "biome format . --write",
		"nullcheck": "tsc --noEmit",
		"prepare": "husky",
		"prepublishOnly": "npm run build",
		"test": "vitest run",
		"test:watch": "vitest",
		"playground": "npm run build && cd playground && npm run dev",
		"playground:install": "cd playground && npm install"
	},
	"keywords": [
		"react",
		"workflow",
		"wizard",
		"multi-step",
		"forms",
		"flow",
		"orchestration"
	],
	"license": "ISC",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kylezunino/react-maestr-flow.git"
	},
	"homepage": "https://github.com/kylezunino/react-maestro-flow#readme",
	"bugs": {
		"url": "https://github.com/kylezunino/react-maestro-flow/issues"
	},
	"peerDependencies": {
		"react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
		"react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.0.1",
		"@testing-library/user-event": "^14.5.2",
		"@types/node": "^22.10.1",
		"@types/react": "^18.3.12",
		"@types/react-dom": "^18.3.1",
		"husky": "^9.0.0",
		"jsdom": "^25.0.1",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"tsup": "^8.5.1",
		"vitest": "^2.1.6"
	},
	"type": "module",
	"dependencies": {
		"typescript": "^5.9.3"
	}
}
